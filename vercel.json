{
  "version": 2,
  "builds": [
    {
      "src": "./api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "1024mb"
      }
    },
    {
      "src": "./public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": { "api/**/*.js": { "memory": 1024 } }
}
